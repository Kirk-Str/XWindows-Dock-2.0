						<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
							<GradientStop Color="#FF909090"/>
							<GradientStop Color="#FF404040" Offset="0.5"/>
							<GradientStop Color="#FF505050" Offset="0.49"/>
							<GradientStop Color="#FF606060" Offset="1"/>
